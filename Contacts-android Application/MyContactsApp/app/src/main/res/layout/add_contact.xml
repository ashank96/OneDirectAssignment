<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/addContactLayout"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        app:cardElevation="7dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginLeft="@dimen/card_margin_horizontal"
        android:layout_marginRight="@dimen/card_margin_horizontal"
        app:cardCornerRadius="0dp"
        android:defaultFocusHighlightEnabled="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Create Contact"
            android:textColor="@color/accent"
            android:textSize="25dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="50dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/contactFirstName"
               android:textCursorDrawable="@color/accent"
                android:outlineProvider="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="First Name" />

            <EditText
                android:id="@+id/contactLastName"
                android:layout_width="match_parent"
                android:textColorHighlight="@color/accent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Last Name" />

            <EditText
                android:id="@+id/contactPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLength="10"
                android:hint="Phone Number"
                android:inputType="phone" />

            <EditText
                android:id="@+id/contactEmailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Email Address"
                android:inputType="textEmailAddress" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/contactAddButton"
                android:text="Save"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>





</LinearLayout>