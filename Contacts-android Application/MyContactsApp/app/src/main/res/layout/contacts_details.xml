<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_marginTop="150dp"
    app:cardElevation="0dp"
    android:layout_marginLeft="@dimen/card_margin_horizontal"
    android:layout_marginRight="@dimen/card_margin_horizontal"
    app:cardCornerRadius="0dp"
    android:defaultFocusHighlightEnabled="true"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/detailContactLayout"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contactDetailFirstName"
        android:textSize="20dp"
        android:enabled="false"
        android:textColorHighlight="@color/accent"
        android:inputType="textPersonName"
         />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contactDetailLastName"
        android:textSize="20dp"
        android:enabled="false"
        android:textColorHighlight="@color/accent"
        android:inputType="textPersonName"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contactDetailPhone"
        android:textSize="20dp"
        android:ems="10"
        android:maxLength="10"
        android:enabled="false"
        android:textColorHighlight="@color/accent"
        android:inputType="phone"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contactDetailEmail"
        android:textSize="20dp"
        android:enabled="false"
        android:textColorHighlight="@color/accent"
        android:inputType="textEmailAddress"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/contactUpdateButton"
        android:enabled="false"
        android:visibility="gone"
        android:text="Update"/>
</LinearLayout>
</android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>